{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@instant3p/storybook": ["../src"]
    }
  },
  "include": [
    "stories/**/*",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 