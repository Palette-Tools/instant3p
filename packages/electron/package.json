{
  "name": "@instant3p/electron",
  "version": "0.20.4",
  "description": "InstantDB for Electron - auth bridge for secure cross-process auth sync + full client for main process",
  "type": "module",
  "main": "./dist/cli.js",
  "types": "./dist/cli.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./main": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    },
    "./templates/*": "./templates/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*",
    "templates/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "peerDependencies": {
    "electron": ">=34.5.8"
  },
  "dependencies": {
    "@instantdb/core": "v0.20.4",
    "level": "^10.0.0"
  },
  "optionalDependencies": {
    "@leichtgewicht/network-interfaces": "^1.0.3",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/ws": "^8.18.1",
    "electron": ">=34.5.8",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.11.1"
}